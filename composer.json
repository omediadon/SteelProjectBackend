{
	"name"        : "omediadon/steel-project",
	"description" : "Backend for Steel Project system",
	"keywords"    : [
		"steelproject"
	],
	"homepage"    : "https://github.com/omediadon/",
	"license"     : "LGPLv3",
	"authors"     : [
		{
			"name" : "SAKHRAOUI Omar",
			"email": "omediadon@gmail.com"
		}
	],
	"require"     : {
		"php": "^8.0",
		"ext-json": "*",
		"ext-pdo": "*",
		"bryanjhv/slim-session": "^4.1.2",
		"cakephp/chronos": "^2.3.0",
		"doctrine/annotations": "^1.13",
		"fakerphp/faker": "^1.20",
		"illuminate/database": "^9.32",
		"lcobucci/jwt": "^4.2.1",
		"monolog/monolog": "^2.8.0",
		"php-di/php-di": "^6.4.0",
		"phpmailer/phpmailer": "^v6.6.4",
		"ramsey/uuid": "^4.5.1",
		"ramsey/uuid-doctrine": "^1.8",
		"selective/array-reader": "^1.1.0",
		"selective/validation": "^2.0.0",
		"slim/csrf": "^1.2.1",
		"slim/http": "^1.2.0",
		"slim/http-cache": "^1.1.0",
		"slim/php-view": "^3.2.0",
		"slim/psr7": "^1.3.0",
		"slim/slim": "^4.10.0",
		"slim/twig-view": "^3.3.0",
		"vlucas/phpdotenv": "^5.4"
	},
	"require-dev" : {
		"roave/security-advisories": "dev-master"
	},
	"config"      : {
		"process-timeout": 0,
		"sort-packages"  : true
	},
	"autoload"    : {
		"psr-4": {
			"App\\"   : "src/app/",
			"System\\": "src/sys/"
		}
	},
	"autoload-dev": {
		"psr-4": {
		}
	},
	"scripts"     : {
		"start": "php -S localhost:8080 -t public"
	}
}
