{
	"name": "omediadon/steel-project",
	"description": "Backend for Steel Project system",
	"keywords": [
		"steelproject"
	],
	"homepage": "https://github.com/omediadon/",
	"license": "LGPLv3",
	"authors": [
		{
			"name": "SAKHRAOUI Omar",
			"email": "omediadon@gmail.com"
		}
	],
	"require": {
		"php": "^8.0",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-pdo": "*",
		"bryanjhv/slim-session": "^4.1.2",
		"cakephp/chronos": "^2.3.0",
		"doctrine/annotations": "^1.13",
		"fakerphp/faker": "^1.20",
		"firebase/php-jwt": "^6.3",
		"illuminate/database": "^9.32",
		"illuminate/validation": "^9.34",
		"monolog/monolog": "^2.8.0",
		"php-di/php-di": "^6.4.0",
		"phpmailer/phpmailer": "^v6.6.4",
		"ramsey/uuid": "^4.5.1",
		"ramsey/uuid-doctrine": "^1.8",
		"selective/array-reader": "^1.1.0",
		"selective/validation": "^2.0.0",
		"slim/csrf": "^1.2.1",
		"slim/http": "^1.2.0",
		"slim/http-cache": "^1.1.0",
		"slim/php-view": "^3.2.0",
		"slim/psr7": "^1.3.0",
		"slim/slim": "^4.10.0",
		"slim/twig-view": "^3.3.0",
		"vlucas/phpdotenv": "^5.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5",
		"roave/security-advisories": "dev-master",
		"selective/test-traits": "^2.2"
	},
	"config": {
		"process-timeout": 0,
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"App\\": "src/app/",
			"Config\\": "src/config/",
			"System\\": "src/sys/",
			"Database\\": "database/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"start": "php -S localhost:8080 -t public",
		"test": "phpunit --configuration phpunit.xml --colors=always",
		"test:all": [
			"@cs:check",
			"@sniffer:check",
			"@stan",
			"@test"
		],
		"test:coverage": "php -d xdebug.mode=coverage -r \"require 'vendor/bin/phpunit';\" -- --configuration phpunit.xml --do-not-cache-result --colors=always --coverage-clover build/logs/clover.xml --coverage-html build/coverage"
	}
}
